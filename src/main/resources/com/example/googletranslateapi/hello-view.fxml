<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.googletranslateapi.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="inputLabel" text="Input Text:"/>
    <TextField fx:id="inputField"/>
    <Button text="Translate" onAction="#onTranslateButtonClick"/>
    <Label fx:id="outputLabel" text="Output Text:"/>
    <ComboBox fx:id="languageSelectMenu" onMouseClicked="#onLanguageSelectClick"/>
    <TextField fx:id="outputField" editable="false"/>

</VBox>
